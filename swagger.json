{
  "swagger": "2.0",
  "info": {
    "title": "Mock Contact API",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": ["http"],
  "tags": [
    {
      "name": "Contacts"
    },
    {
      "name": "Groups"
    }
  ],
  "paths": {
    "/contacts": {
      "get": {
        "tags": ["Contacts"],
        "responses": {
          "200": { "description": "OK" }
        }
      },
      "post": {
        "tags": ["Contacts"],
        "parameters": [
          {
            "in": "body",
            "name": "contact",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "fullname": { "type": "string" },
                "email": { "type": "string" },
                "photo": { "type": "string" },
                "job": { "type": "string" },
                "mobile": { "type": "string" },
                "group": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Created" }
        }
      }
    },
    "/contacts/{id}": {
      "get": {
        "tags": ["Contacts"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": { "description": "Contact found" },
          "404": { "description": "Contact not found" }
        }
      },
      "put": {
        "tags": ["Contacts"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "contact",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "fullname": { "type": "string" },
                "email": { "type": "string" },
                "photo": { "type": "string" },
                "job": { "type": "string" },
                "mobile": { "type": "string" },
                "group": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "Updated successfully" }
        }
      },
      "patch": {
        "tags": ["Contacts"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "contact",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "fullname": { "type": "string" },
                "email": { "type": "string" },
                "photo": { "type": "string" },
                "job": { "type": "string" },
                "mobile": { "type": "string" },
                "group": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "Patched successfully" }
        }
      },
      "delete": {
        "tags": ["Contacts"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": { "description": "Deleted successfully" },
          "404": { "description": "Contact not found" }
        }
      }
    },
    "/groups": {
      "get": {
        "tags": ["Groups"],
        "responses": {
          "200": { "description": "OK" }
        }
      },
      "post": {
        "tags": ["Groups"],
        "parameters": [
          {
            "in": "body",
            "name": "group",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "id": { "type": "string" },
                "name": { "type": "string" }
              },
              "required": ["id", "name"]
            }
          }
        ],
        "responses": {
          "201": { "description": "Group created" }
        }
      }
    },
    "/groups/{id}": {
      "get": {
        "tags": ["Groups"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": { "description": "Group found" },
          "404": { "description": "Group not found" }
        }
      },
      "put": {
        "tags": ["Groups"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "group",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "id": { "type": "string" },
                "name": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "Group updated" }
        }
      },
      "patch": {
        "tags": ["Groups"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "group",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "Group partially updated" }
        }
      },
      "delete": {
        "tags": ["Groups"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": { "description": "Group deleted" },
          "404": { "description": "Group not found" }
        }
      }
    }
  }
}
